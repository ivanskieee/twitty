<%= simple_form_for(@tweet) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :tweet, label: "Tweet at your own risk", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "What is happening?!" %>
  </div>
</div>
<%= f.button :submit, "Post", class: "button is-black" %>
<% end %>